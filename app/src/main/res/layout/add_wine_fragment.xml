<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Edit"
        android:id="@+id/et_name"
        android:hint="@string/name"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Edit"
        android:id="@+id/et_type"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/corte"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Edit"
        android:id="@+id/et_validade"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/validade"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/et_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Edit"
        android:id="@+id/et_temperature"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/temperatura"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/et_validade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Edit"
        android:id="@+id/et_shelf_life"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/validade"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/et_temperature"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Edit"
        android:id="@+id/et_crop"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/safra"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/et_shelf_life"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_add_wine"
        android:text="@string/add_wine_button_text"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>